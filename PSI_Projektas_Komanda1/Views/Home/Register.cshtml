@{
    ViewBag.Title = "Registration";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Register", "Registration", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        <label for="name">Name:</label>
        <input class="form-control" type="text" id="name" name="name" style="width: 250px;" />
        @Html.ValidationMessage("name", "", new { @class = "text-danger" })
    </div>
    <div>
        <label for="surname">Surname:</label>
        <input class="form-control" type="text" id="surname" name="surname" style="width: 250px;" />
        @Html.ValidationMessage("surname", "", new { @class = "text-danger" })
    </div>

    <div>
        <label for="email">Email:</label>
        <input class="form-control" type="email" id="email" name="email" style="width: 250px;" />
        @Html.ValidationMessage("email", "", new { @class = "text-danger" })
    </div>

    <div>
        <label for="username">Username:</label>
        <input class="form-control" type="text" id="username" name="username" style="width: 250px;" />
        @Html.ValidationMessage("username", "", new { @class = "text-danger" })
    </div>


    <div>
        <label for="password">Password:</label>
        <input class="form-control" type="password" id="password" name="password" style="width: 250px;" />
        @Html.ValidationMessage("password", "", new { @class = "text-danger" })
    </div>

    <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input class="form-control" type="password" id="confirmPassword" name="confirmPassword" style="width: 250px;" />
        @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
    </div>

    <div style="padding:30px 0px 30px 0px">
        <input class="btn btn-primary" type="submit" value="Register" />
    </div>
}
