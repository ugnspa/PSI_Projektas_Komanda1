@model Cart

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

@if (Model == null || Model.Size() == 0)
{
    <p>Your cart is empty</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Size(); i++)
            {
                <tr>
                    <td><img src="@Model.Get(i).Picture" /></td>
                    <td>"@Model.Get(i).Name"</td>
                    <td>"@Model.Get(i).Price"</td>
                   <td>"@Model.GetAmount(i)"</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.Price()</p>
}



