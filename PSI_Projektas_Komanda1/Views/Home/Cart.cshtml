
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

@if (Model.items.Count == 0)
{
    <p>Your cart is empty</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <td><img src="@item.Key.Picture" /></td>
                    <td>@item.Key.Name</td>
                    <td>@item.Key.Price</td>
                    <td>@item.Value</td>
                    <td>@Model.ItemPrice(item.Key)</td>
                    <td>
                        <form method="post" action="RemoveItem">
                            <input type="hidden" name="itemId" value="@item.Key.Id" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.TotalPrice()</p>
}

<style>
    table {
        border-collapse: collapse;
        margin: 20px 0;
    }

    td, th {
        border: 1px solid black;
        padding: 10px;
    }

    img {
        max-height: 100px;
        max-width: 100px;
    }
</style>
