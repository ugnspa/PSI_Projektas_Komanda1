@{
    ViewBag.Title = "Login";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label for="username">Username:</label>
        <input class="form-control" type="text" id="username" name="username" style="width: 250px;" />
    </div>

    <div>
        <label for="password">Password:</label>
        <input class="form-control" type="password" id="password" name="password" style="width: 250px;" />
    </div>

    <div style="padding-top:10px">
        <input class="btn btn-primary" type="submit" value="Login" />
    </div>
    <div style="padding:30px 0px 30px 0px">
        <h3>Not a registered user?</h3>
        <div>
            @Html.ActionLink("Register", "Register", "Registration", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    
}