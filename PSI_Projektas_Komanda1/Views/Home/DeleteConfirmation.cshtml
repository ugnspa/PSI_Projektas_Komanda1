@model dynamic

<style>
    .button-container {
        display: flex;
        justify-content: space-between;
    }
</style>

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this item?</p>

<div class="button-container">
    @using (Html.BeginForm("Delete", "Home", new { id = Model.Id, type = Model.Type }, FormMethod.Post))
    {
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    }

    <input type="button" value="Go Back" onclick="location.href='@Url.Action("Manage", "Home")'" class="btn btn-primary" />
</div>
<br>
